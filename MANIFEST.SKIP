# Avoid version control files.
\bRCS\b
\bCVS\b
\bSCCS\b
,v$
\B\.svn\b
\B\.git\b
\B\.cvsignore\b
\B\.gitignore\b
\b_darcs\b

# Avoid Makemaker generated and utility files.
^MYMETA\.yml$
^MANIFEST\.SKIP$
^MANIFEST\.bak$
^Makefile$
^blib/
^MakeMaker-\d
^pm_to_blib\.ts$
^pm_to_blib$
^blibdirs\.ts$

# Avoid Module::Build generated and utility files.
^Build$
^Build\.bat$
^_build
^Build\.COM$
^BUILD\.COM$
^build\.com$

# Avoid temp and backup files.
~$
\#$
\b\.#
\.tmp$
\.old$
\.bak$
\.swp$
\.rej$

# Avoid Devel::Cover generated files
\bcover_db\b

# Avoid Devel::NYTProf generated files
\bnytprof\.out
\bnytprof\b

# Avoid OS-specific files/dirs
#   Mac OSX metadata
\B\.DS_Store
#   Mac OSX SMB mount metadata files
\B\._

# Avoid archives of this distribution
\bWGDev-v?[\d\.\_]+
\bwgd-v?[\d\.\_]+
\bwgd$

# Don't include upgrade command in dist
^lib/WebGUI/Command/Self/Upgrade\.pm$

